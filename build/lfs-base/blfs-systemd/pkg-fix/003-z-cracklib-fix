#!/bin/bash

FIX_PKG=cracklib-2.9.11-x86_64-swl01.txz
EXPLODE_DIR=/sources/explode-pgk
PKG_DIR=/var/lib/packages

### EXPLODE PKG ###
mkdir $EXPLODE_DIR
pushd $EXPLODE_DIR
explodepkg "$PKG_DIR/$FIX_PKG"

### ADD FILES ###
mkdir -pv /usr/share/dict
cp -a /usr/share/dict/cracklib-extra-words ./usr/share/dict

### REBUILD PKG ###
makepkg -l y -c n "$PKG_DIR/$FIX_PKG"

### CLEANUP ###
popd
rm -rf $EXPLODE_DIR
