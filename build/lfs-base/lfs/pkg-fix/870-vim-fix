#!/bin/bash

FIX_PKG=vim-9.1.0041-x86_64-swl01.txz
EXPLODE_DIR=/sources/explode-pgk
PKG_DIR=/var/lib/packages

### EXPLODE PKG ###
mkdir $EXPLODE_DIR
pushd $EXPLODE_DIR
explodepkg "$PKG_DIR/$FIX_PKG"

### ADD FILES ###
mkdir -pv ./etc
cp -a /etc/vimrc ./etc/

### REBUILD PKG ###
makepkg -l y -c n "$PKG_DIR/$FIX_PKG"

### CLEANUP ###
popd
rm -rf $EXPLODE_DIR
