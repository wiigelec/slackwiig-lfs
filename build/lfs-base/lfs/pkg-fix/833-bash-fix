#!/bin/bash

FIX_PKG=bash-5.2.21-x86_64-swl01.txz
EXPLODE_DIR=/sources/explode-pgk
PKG_DIR=/var/lib/packages

### EXPLODE PKG ###
mkdir $EXPLODE_DIR
pushd $EXPLODE_DIR
explodepkg "$PKG_DIR/$FIX_PKG"

### ADD FILES ###
cp -a /usr/bin/sh ./usr/bin

### REBUILD PKG ###
makepkg -l y -c n "$PKG_DIR/$FIX_PKG"

### CLEANUP ###
popd
rm -rf $EXPLODE_DIR
