#!/bin/bash

for FILE in ./scripts/*;
do
    ### GET PACKAGE NAME AND VERSION ##
    echo Processing $FILE...

    package=${FILE##*\/}
    package=${package#*z-}
    package=$(echo "$package" | tr '[:upper:]' '[:lower:]')
    #echo $package

    version=$(grep PACKAGE\= $FILE)
    version=${version/PACKAGE\=/}
    version=${version##*-}
    version=${version%.tar*}
    version=${version%.zip*}
    version=${version%.tgz*}
    #echo $version

    ### INSTALLWATCH LOG FILE ###
    iwlog="/var/lib/iwlog/$package"-"$version".iwlog.raw
    iwso="/usr/lib/installwatch.so"
    #echo $iwlog

    ### DIFF LOG FILEs ###
    difflog1="/var/lib/iwlog/$package"-"$version".difflog1
    difflog2="/var/lib/iwlog/$package"-"$version".difflog2

    ### PROCESS FILE ###
    outfile="$FILE".tmp
    declare -i linenum=1
    while IFS= read -r line;
    do
	### INSERT INSTALLWATCH ###
	case $line in
            "sudo -E sh -e << ROOT_EOF" )
                # preload
		echo "$line" >> $outfile
		echo "export INSTALLWATCHFILE=$iwlog" >> $outfile
                echo "export LD_PRELOAD=$iwso" >> $outfile
                ;;
            "ROOT_EOF" )
                # unset
		echo "unset INSTALLWATCHFILE" >> $outfile
                echo "unset LD_PRELOAD" >> $outfile
		echo "$line" >> $outfile
                ;;
	    "cat > "* )
		echo "touch $(echo "$line" | cut -d' ' -f3)" >> $outfile
		echo "$line" >> $outfile
		;;
	    "cat >> "* )
		echo "touch $(echo "$line" | cut -d' ' -f3)" >> $outfile
		echo "$line" >> $outfile
		;;
	### INSERT DIFF LOGS ###
	    "#!/bin/bash" )
		echo "$line" >> $outfile
		echo "sudo -E sh -e << ROOT_EOF" >> $outfile
		echo "find / -xdev > $difflog1" >> $outfile
		echo "ROOT_EOF" >> $outfile
		;;
	    "exit" )
		echo "sudo -E sh -e << ROOT_EOF" >> $outfile
		echo "find / -xdev > $difflog2" >> $outfile
		echo "ROOT_EOF" >> $outfile
		echo "$line" >> $outfile 
		;;
	    * )
		echo "$line" >> $outfile
		;;
        esac 
	#echo "$line"
        linenum+=1

    done < $FILE

    ### RENAME FILES ###
    #chmod a-x $FILE
    #mv $FILE $FILE.org
    rm $FILE
    mv $outfile $FILE
    chmod a+x $FILE

done


exit
